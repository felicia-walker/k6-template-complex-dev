{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "useUnknownInCatchVariables": true,
    "stripInternal": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "docs", "scripts"]
}
